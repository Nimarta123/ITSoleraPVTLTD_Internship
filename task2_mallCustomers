import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
from sklearn.cluster import KMeans
from sklearn.preprocessing import StandardScaler
from sklearn.decomposition import PCA

# 1. LOAD DATA
df = pd.read_csv('Mall_Customers.csv')

# 2. PREPROCESSING
# Select features for clustering
X = df[['Age', 'Annual Income (k$)', 'Spending Score (1-100)']]

# Scale data (Standardization is crucial for K-Means)
scaler = StandardScaler()
X_scaled = scaler.fit_transform(X)

# 3. K-MEANS CLUSTERING
# Find optimal k using Elbow Method
wcss = []
for i in range(1, 11):
    kmeans = KMeans(n_clusters=i, init='k-means++', random_state=42)
    kmeans.fit(X_scaled)
    wcss.append(kmeans.inertia_)

# Visualize Elbow
plt.plot(range(1, 11), wcss, marker='o')
plt.title('Elbow Method (Finding Optimal Clusters)')
plt.show()

# Fit K-Means with k=5
kmeans = KMeans(n_clusters=5, init='k-means++', random_state=42)
df['Cluster'] = kmeans.fit_predict(X_scaled)

# 4. VISUALIZATION (PCA)
pca = PCA(n_components=2)
X_pca = pca.fit_transform(X_scaled)
df['PCA1'], df['PCA2'] = X_pca[:, 0], X_pca[:, 1]

plt.figure(figsize=(10, 6))
sns.scatterplot(x='PCA1', y='PCA2', hue='Cluster', data=df, palette='bright')
plt.title('Customer Segments (PCA Projection)')
plt.show()
analysis = df.groupby('Cluster')[['Age', 'Annual Income (k$)', 'Spending Score (1-100)']].mean()
print("Cluster Profiles:\n", analysis) 
